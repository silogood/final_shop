<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ripple_custom"
    tools:context=".admin.admin_shoes.Admin_Shoes">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints"
        >

        <EditText
            android:id="@+id/admin_shoes_edittxt_1"
            android:layout_width="match_parent"
            android:hint="상품명을 입력하세요"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:layout_height="wrap_content"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="품번을 입력하세요"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:id="@+id/admin_shoes_edittxt_2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="수량을 입력하세요"
            android:numeric="signed"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:id="@+id/admin_shoes_edittxt_3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-40dp"
                android:layout_marginTop="0dp"
                android:textSize="10dp"
                android:text="품목별 사진 미구현"
                android:textColor="#D30000">

            </TextView>

            <Button
                android:id="@+id/admin_shoes_addbtn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="추가" />

            <Button
                android:id="@+id/admin_shoes_purchace_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="삭제" />

            <Button
                android:id="@+id/admin_shoes_go_history_btn"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:text="수정"></Button>

        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/admin_shoes_listview">

        </ListView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>